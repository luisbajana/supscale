<div class="container">

<%- model_class = Application -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      
      <th><%= model_class.human_attribute_name(:startup) %></th>
      <th><%= model_class.human_attribute_name(:website) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:representative_name) %></th>
      <th><%= model_class.human_attribute_name(:rut) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td><%= application.startup %></td>
        <td><%= application.website %></td>
        <td><%= application.email %></td>
        <td><%= application.representative_name %></td>
        
        <td><%= application.rut %></td>
        
        <td>
          <%= link_to "PDF", application_path(application, :format => "pdf") %>
          <% link_to "Edit",
                      edit_application_path(application), :class => 'btn btn-mini' %>
          <% link_to "Delete",
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>



</div>